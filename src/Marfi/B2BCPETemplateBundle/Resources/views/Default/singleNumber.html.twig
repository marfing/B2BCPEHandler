{# qui si definisce come formattare il form con nome indicato in form_widget e con route che rimanda al controller definita in path #}

<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<title>Single number configuration</title>
		<link rel="stylesheet" href="/css/Style1.css" />
	</head>
  
	<body>
		<div class="wrap">
			<h2>Single number configuration</h2>
			<form action="{{ path('singlenumber') }}" method="post" {{ form_enctype(singlenumber_form) }}>
					{{ form_widget(singlenumber_form) }}  {{ form_errors(singlenumber_form) }}
				<br>
					<input type="submit" />
			</form>
			<form method="link" action="{{ path('newpui') }} "><input type="submit" value=" Back to PUI configuration"></form>
		</div>
		<aside class="summary">
			<h2>Summary</h2>
			{{summary.printUserXML}}
		</aside>

    </body>
